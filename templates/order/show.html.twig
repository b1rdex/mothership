{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Is_master</th>
                <td>{{ order.isMaster ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Worker</th>
                <td>{{ order.worker }}</td>
            </tr>
            <tr>
                <th>Pair</th>
                <td>{{ order.pair }}</td>
            </tr>
            <tr>
                <th>Volume</th>
                <td>{{ order.volume }}</td>
            </tr>
            <tr>
                <th>Operation</th>
                <td>{{ order.operation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('order_index') }}">back to list</a>

    <a href="{{ path('order_edit', {'id': order.id}) }}">edit</a>

    {{ include('order/_delete_form.html.twig') }}
{% endblock %}
